    <script>
        // --- 1. Particles Background System ---
        const canvas = document.getElementById('particleCanvas');
        const ctx = canvas.getContext('2d');
        let particles = [];

        function initCanvas() {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        }

        class Particle {
            constructor() {
                this.x = Math.random() * canvas.width;
                this.y = Math.random() * canvas.height;
                this.size = Math.random() * 2;
                this.speedX = (Math.random() - 0.5) * 0.5;
                this.speedY = (Math.random() - 0.5) * 0.5;
                this.opacity = Math.random();
            }
            update() {
                this.x += this.speedX;
                this.y += this.speedY;
                if (this.x > canvas.width) this.x = 0;
                if (this.x < 0) this.x = canvas.width;
                if (this.y > canvas.height) this.y = 0;
                if (this.y < 0) this.y = canvas.height;
            }
            draw() {
                ctx.fillStyle = `rgba(0, 242, 254, ${this.opacity})`;
                ctx.beginPath();
                ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
                ctx.fill();
            }
        }

        for (let i = 0; i < 100; i++) particles.push(new Particle());

        function animateParticles() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            particles.forEach(p => { p.update(); p.draw(); });
            requestAnimationFrame(animateParticles);
        }

        // --- 2. 3D Tilt Effect ---
        const wrapper = document.getElementById('nexusWrapper');
        document.addEventListener('mousemove', (e) => {
            let xAxis = (window.innerWidth / 2 - e.pageX) / 25;
            let yAxis = (window.innerHeight / 2 - e.pageY) / 25;
            wrapper.style.transform = `rotateY(${xAxis}deg) rotateX(${yAxis}deg)`;
        });

        // --- 3. Scan Logic ---
        function initiateNexusScan() {
            const w = parseFloat(document.getElementById('weight').value);
            const h = parseFloat(document.getElementById('height').value);

            if (!w || !h) {
                alert("CRITICAL_ERROR: NULL_DATA_STREAM");
                return;
            }

            const btn = document.querySelector('.btn-nexus');
            btn.innerHTML = "DATA_PROCESSING...";
            btn.disabled = true;

            setTimeout(() => {
                const bmi = (w / ((h/100) * (h/100))).toFixed(1);
                displayResults(bmi);
                btn.innerHTML = "INITIALIZE_CORE_SCAN";
                btn.disabled = false;
            }, 1000);
        }

        function displayResults(bmi) {
            const resultArea = document.getElementById('resultNexus');
            const bmiDisplay = document.getElementById('bmiVal');
            const status = document.getElementById('statusTag');
            const analysis = document.getElementById('analysis');
            
            resultArea.style.display = 'block';
            
            // Counter Animate
            let current = 0;
            const target = parseFloat(bmi);
            const timer = setInterval(() => {
                current += 0.5;
                if (current >= target) {
                    bmiDisplay.innerText = target.toFixed(1);
                    clearInterval(timer);
                } else {
                    bmiDisplay.innerText = current.toFixed(1);
                }
            }, 20);

            let label, color, desc;

            if (target < 18.5) {
                label = "CRITICAL: UNDER_MASS";
                color = "#ff0044";
                desc = "ระบบตรวจพบภาวะมวลร่างกายต่ำกว่าเกณฑ์มาตรฐาน แนะนำให้เพิ่มการดูดซึมสารอาหารกลุ่มโปรตีนและแคลอรี่เพื่อเสถียรภาพของร่างกาย";
            } else if (target < 23) {
                label = "CORE_STABLE: OPTIMAL";
                color = "#00f2fe";
                desc = "ยินดีด้วย! ร่างกายของคุณอยู่ในระดับ 'สมดุลสูงสุด' ระบบการทำงานของชีวภาพทำงานได้อย่างมีประสิทธิภาพมากที่สุดในขณะนี้";
            } else if (target < 25) {
                label = "WARNING: EXCESS_MASS";
                color = "#ffcc33";
                desc = "ระบบเริ่มตรวจพบการสะสมของพลังงานส่วนเกิน แนะนำให้รักษาสมดุลด้วยการเผาผลาญพลังงาน (Active Exercises) อย่างต่อเนื่อง";
            } else {
                label = "DANGER: CRITICAL_OVERLOAD";
                color = "#ff0000";
                desc = "ตรวจพบสภาวะโอเวอร์โหลดของมวลไขมัน! มีความเสี่ยงต่อระบบหมุนเวียนโลหิตและหัวใจระดับสูง โปรดเข้ารับการปรับจูนจากผู้เชี่ยวชาญทันที";
            }

            setTimeout(() => {
                status.innerText = label;
                status.style.color = color;
                status.style.borderColor = color;
                status.style.boxShadow = `0 0 20px ${color}44`;
                bmiDisplay.style.color = color;
                analysis.innerText = desc;
            }, 300);
        }

        window.addEventListener('resize', initCanvas);
        initCanvas();
        animateParticles();
    </script>
</body>
